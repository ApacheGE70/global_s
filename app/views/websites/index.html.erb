<p id="notice"><%= notice %></p>

<h1>Listing Websites</h1>

<table>
  <thead>
    <tr>
      <th>Menu type</th>
      <th>Website name</th>
      <th>Description</th>
      <th>Likes</th>
      <th>User</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= website.menu_type %></td>
        <td><%= website.website_name %></td>
        <td><%= website.description %></td>
        <td><%= website.likes %></td>
        <td><%= website.user_id %></td>
        <td><%= website.created_at %></td>
        <td><%= website.updated_at %></td>
        <td><%= link_to 'Show', website %></td>
        <td><%= link_to 'Edit', edit_website_path(website) %></td>
        <td><%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

